<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <!-- Purple diagonal background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6A1B9A"
        android:rotation="45"
        android:layout_marginTop="-150dp" /> <!-- Adjusted margin for better alignment -->

    <!-- White diagonal overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:rotation="45"
        android:layout_marginBottom="-150dp" /> <!-- Adjusted margin for better overlay effect -->

    <!-- Main card-like layout -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_centerInParent="true"
        android:clipToOutline="true"
        android:background="@drawable/rounded_corners"> <!-- Retained rounded corners background -->

        <!-- Image placeholder -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/society"
            android:scaleType="centerCrop"
            android:contentDescription="Language learning image" />

        <!-- Text content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="Welcome to Personality\nPredictor!"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <!-- Start button -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="START"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
